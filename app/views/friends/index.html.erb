<%= render "shared/header" %>
<h1 class="text-3xl font-semibold text-center mt-4">Friends</h1>
<div class="flex justify-center mt-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @user_profiles.each do |friend| %>
      <div class="bg-white rounded-lg shadow-md p-4">
        <div class="flex items-center justify-center">
          <% if friend.profile_picture_public_id.present? %>
            <img class="w-24 h-24 rounded-full" src="<%= cl_image_path(friend.profile_picture_public_id, width: 96, height: 96, crop: :fill) %>" alt="Profile Picture">
          <% else %>
            <div class="w-24 h-24 rounded-full bg-gray-300 flex items-center justify-center">
              <span class="text-gray-600 text-4xl">&#x1F464;</span>
            </div>
          <% end %>
        </div>
        <h2 class="text-xl font-semibold text-center mt-4"><%= friend.first_name %> <%= friend.last_name %></h2>
        <p class="text-gray-600 text-center"><%= friend.bio %></p>
        <div class="flex flex-col items-center justify-center">
          <a href="#" class="text-blue-500 hover:underline block">View Profile</a>
          <a href="messages/<%= friend.user_id%>" class='bg-blue-500 text-white py-2 px-4 rounded-full mr-2'>Message</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
