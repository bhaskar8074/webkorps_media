<%=render "shared/header" %>

<div class="flex justify-center items-center h-screen">
    <div class="bg-slatee-400 p-6 rounded-lg shadow-lg">
      <h1 class="text-2xl font-semibold mb-4">Upload Post</h1>
      <%= form_for @post, method: :post, url:posts_path, html: {multipart: true} do |f|%>
      <div class="mb-4">
        <%=f.label :post_img, class: "block text-gray-700 font-semibold mb-1"%>
        <%=f.file_field :post_img, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500"%>
      </div>

      <div class="mb-4">
        <%=f.label :caption, class: "block text-gray-700 font-semibold mb-1"%>
        <%=f.text_field :caption, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500"%>
      </div>

      <div class="mb-4">
        <%= f.label :visibility, class: "block text-gray-700 font-semibold mb-1"%>
        <select name="post[visibility]">
          <option value="see_by_public">Public</option>
          <option value="see_by_friends">Friends</option>
          <option value="only_by_me">Private</option>
        </select>
      </div>
      <%= f.submit 'Upload Post' %>
    <%end%>
    </div>  
</div>


