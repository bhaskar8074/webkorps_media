<%=turbo_frame_tag "post#{post.id}features" do%>
<div class="flex items-center space-x-4">
  <%= button_to toggle_like_path(post_id: post.id), method: :post, class: "text-gray-500 hover:text-red-500" do%>
    <i class="<%= post.likes.find_by(user: current_user)? "fas fa-heart text red-color text-xl": "fas fa-heart text-xl"%>"></i>
  <%end%>
  <a href="#" class="text-gray-500 hover:text-blue-500">
    <i class="fas fa-comment text-xl"></i>
  </a>
  <a href="#" class="text-gray-500 hover:text-green-500">
    <i class="fas fa-share text-xl"></i>
  </a>
</div>
<small class=""><%= pluralize(post.likes.count , "like")%></small>
<%end%>