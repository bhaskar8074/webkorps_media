<%= render "shared/header"%>

<div class="container mx-auto p-6">
    <div class="flex flex-wrap -mx-2">
        <%@users.each do |user|%>    
            <div class="w-full md:w-1/2 lg:w-1/4 px-1 mb-4 :width-300px">
                <div class="max-w-xs mx-auto bg-white rounded-lg shadow-lg">
                  <div class="p-4 flex flex-col items-center">
                    <% if user.profile.profile_picture_public_id.present? %>
                      <img class="w-16 h-16 rounded-full mb-2" src="<%= cl_image_path(user.profile.profile_picture_public_id, width: 64, height: 64, crop: :fill) %>" alt="Profile Picture">
                    <% else %>
                      <div class="w-16 h-16 rounded-full bg-gray-300 flex items-center justify-center mb-2">
                        <span class="text-gray-600 text-2xl">&#x1F464;</span>
                      </div>
                    <% end %>
                    <div class="text-center">
                      <h1 class="text-lg font-semibold"><%= user.profile.first_name %> <%= user.profile.last_name %></h1>
                      <% unless current_user == user %>
                        <%= button_to 'Add Friend', send_friend_request_profile_path(id: user.profile.user_id), method: :post, class: 'bg-blue-500 hover:bg-blue-600 text-white px-2 py-1 rounded-full mt-2' %>
                        <% if can? :destroy, user %>
                            <%= link_to 'destroy', delete_user_path(id: user.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
                        <% end %>
                      <% end %>
                      
                    </div>
                  </div>
                </div>
            </div>
        <%end%>
    </div>
</div>