

<%= form_with(model: @message, url: messages_path, method: :post, remote: true) do |form| %>
  <div class="flex items-center border-t border-gray-300 py-2">
    <%= form.text_area :content, placeholder: 'Type your message...', class: 'block w-full h-12 px-4 rounded-full bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none overflow-hidden' %>
    <%= form.hidden_field :receiver_id, value: @receiver.id %>
    <%= form.submit "send", class: 'text-blue-500 font-semibold hover:text-blue-600 ml-4' %>
  </div>
<% end %>