<%= render "shared/header" %>

<div class="flex justify-center items-center h-screen">
  <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
    <h2 class="text-3xl font-semibold mb-4">Sign In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-8" }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500", placeholder: 'Email', required: true %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500", placeholder: 'Password', required: true %>
      </div>

      <div class="mb-4">
        <label class="block text-gray-700 font-semibold mb-1" for="user_remember_me">
          <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
          Remember me
        </label>
      </div>

      <%= f.submit 'Sign In', class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-semibold transition duration-300 ease-in-out w-full" %>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
