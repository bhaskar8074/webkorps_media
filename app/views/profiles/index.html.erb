<h1>All User Profiles</h1>

<div class="profiles-list">
  <% @profiles.each do |profile| %>
    <div class="profile-card">
      <h2><%= profile.user.full_name %></h2>
      <p><%= profile.bio %></p>
      
      <% unless current_user == profile.user %>
        <% if current_user.friendships.pending.where(friend: profile.user).empty? %>
          <%= link_to "Add Friend", send_friend_request_profile_path(profile), method: :post, class: "btn btn-primary" %>
        <% else %>
          <p>Friend request sent</p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
