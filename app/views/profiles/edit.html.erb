<%= render "shared/header"%>
<div class="flex justify-center items-center h-screen bg-gray-200">
<div class="bg-slate-400 p-6 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold mb-4">Edit Profile</h1>
<%= form_for @profile, url: profile_path, method: :patch, html: { multipart: true } do |f| %>
  <div class="mb-4">
    <%= f.label :first_name, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.text_field :first_name, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :last_name, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.text_field :last_name, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :bio, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.text_area :bio, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500" %>
  </div>
  
  <div class="mb-4">
    <%= f.label :profile_picture, class: "block text-gray-700 font-semibold mb-1" %>
    <%= f.file_field :profile_picture, class: "w-full py-2 px-3 border rounded-lg bg-gray-100 focus:outline-none focus:bg-white focus:border-blue-500" %>
  </div>
  
  <div class="mb-4">
    <%= f.submit 'Update Profile', class: "bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-semibold transition duration-300 ease-in-out" %>
  </div>
<% end %>
</div>
</div>